<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maplewood"
    tools:context="com.example.yhj.test2.MainActivity">


    <Button
        android:id="@+id/food_table"
        android:layout_width="138dp"
        android:layout_height="192dp"
        android:background="@drawable/restaurant"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/library"
        android:layout_width="138dp"
        android:layout_height="192dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/library"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/bus_table"
        android:layout_width="138dp"
        android:layout_height="192dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/bustable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_table" />

    <Button
        android:id="@+id/domi_res"
        android:layout_width="138dp"
        android:layout_height="192dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/domitory_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/library" />


</android.support.constraint.ConstraintLayout>
